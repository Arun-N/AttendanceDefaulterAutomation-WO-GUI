        for para in document.paragraphs:
            temp = para.text.split()
            if not temp:
                continue
            else:
                for word in temp:
                    self.token.append(word)
        print(self.token)



        word = para.text.split()
            if not word:
                continue
            else:
                if word[0] == "Name:":
                    print("Got the name")
                    newtext = para.text.replace("Name:", "Name: A")
                    para.text = newtext
                    self.count += 1
                elif word[0] == "RollNo:":
                    print("Got the RNO")
                    newtext = para.text.replace("RollNo:", "RollNo: B")
                    para.text = newtext
                    self.count += 1
                elif word[0] == "Attendance:":
                    print("Got the Attd")
                    newtext = para.text.replace("Attendance:", "Attendance: C")
                    para.text = newtext
                    self.count += 1
                if self.count == 3:
                    document.save('temp.docx')
                    self.count = 0
                    break


